---
import BaseLayout from "@/layouts/BaseLayout.astro"
import { ArticleList } from "@/components/article-list"
import { Header } from "@/components/header"
import { Footer } from "@/components/footer"
import { getSortedPosts, toPostMeta } from "@/lib/posts"

const title = "文章归档 | 思维边界"
const description = "全部文章列表"
const posts = await getSortedPosts(true)
const articles = posts.map((post) => toPostMeta(post))
---

<BaseLayout {title} {description}>
  <div class="min-h-screen bg-background">
    <Header client:load />
    <main class="pt-24">
      <ArticleList client:load articles={articles} />
    </main>
    <Footer />
  </div>
</BaseLayout>
